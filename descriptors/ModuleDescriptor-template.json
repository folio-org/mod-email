{
  "id": "${artifactId}-${version}",
  "name": "email",
  "requires": [
    {
    "id": "configuration",
    "version": "2.0"
    }
  ],
  "provides": [
    {
      "id": "email",
      "version": "1.0",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/email",
          "permissionsRequired": [
            "email.message.post"
          ],
          "modulePermissions": [
            "configuration.entries.collection.get"
          ]
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [
            "POST"
          ],
          "pathPattern": "/_/tenant"
        },
        {
          "methods": [
            "DELETE"
          ],
          "pathPattern": "/_/tenant"
        }
      ]
    },
    {
      "id": "_timer",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/delayedTask/sendBatchEmails",
          "unit": "minute",
          "delay": "1"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "email.message.post",
      "displayName": "message - send email notifications",
      "description": "send email notifications"
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${artifactId}:${version}",
    "dockerArgs": {
      "HostConfig": {
        "PortBindings": {
          "8081/tcp": [
            {
              "HostPort": "%p"
            }
          ]
        }
      }
    },
    "dockerPull": false
  }
}
