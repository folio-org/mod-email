{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "The mail message that can be sent via email",
  "title": "Email Entity Schema",
  "type": "object",
  "properties": {
    "id": {
      "description":"unique identifier of entity",
      "type": "string"
    },
    "notificationId": {
      "description":"notification identifier",
      "type": "string"
    },
    "from": {
      "description":"sender's address",
      "type": "string"
    },
    "to": {
      "description":"address of the recipient",
      "type": "string"
    },
    "header": {
      "description":"subject of email",
      "type": "string"
    },
    "outputFormat": {
      "description":"format type: `text/html` or `text/plain`",
      "type": "string"
    },
    "body": {
      "description":"text of email",
      "type": "string"
    },
    "status": {
      "description":"status of email",
      "type": "string",
      "default": "NEW"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "description": "The date the message was created"
    },
    "attachments": {
      "description":"attachment list",
      "id": "attachmentData",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "attachment.json"
      }
    }
  },
  "required": [
    "notificationId",
    "to",
    "header",
    "body"
  ]
}
